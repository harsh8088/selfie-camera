<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hrawat.selfiecamera.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <org.opencv.android.JavaCameraView
            android:id="@+id/java_camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:padding="@dimen/padding_camera_layout">

        <ImageView
            android:id="@+id/iv_rotate_camera"
            android:layout_width="@dimen/dimen_camera_icon"
            android:layout_height="@dimen/dimen_camera_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="2dp"
            android:src="@drawable/ic_camera_rotate"
            />

        <ImageView
            android:id="@+id/iv_camera_video"
            android:layout_width="@dimen/dimen_camera_icon"
            android:layout_height="@dimen/dimen_camera_icon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:src="@drawable/ic_video"/>
    </RelativeLayout>
</LinearLayout>
